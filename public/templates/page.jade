extends layout
include ../includes/date

block prepend title
  | #{ page.title } |&nbsp;

block description
  meta(name='description', content=page.metadata.abstract)

block content
  article
    header
      h1=page.title
      if page.metadata.date
        mixin date(page.metadata.date)
    section#content!{typogr.typogrify(page.html)}
