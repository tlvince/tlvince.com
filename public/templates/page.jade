extends layout

block prepend title
  | #{ page.title } | 

block description
  meta(name='description', content=page.metadata.abstract)

block content
  article
    header
      h1=page.title
    section#content!= page.html
    if page._metadata.date
      section#meta
        small
          p.muted#date-authored
            include ../includes/date
            mixin date(page.date)
    block comments
