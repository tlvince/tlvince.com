extends layout
include ../includes/date

block prepend title
  | #{ page.title } | 

block header
  span.title
    a(href='/')= locals.author
  p.description= locals.description

block description
  meta(name='description', content=page.metadata.abstract)

block content
  article
    header
      h1=page.title
      if page.metadata.date
        mixin date(page.metadata.date)
    section#content!{identify(typogr.typogrify(page.html)), {anchor: true}}
