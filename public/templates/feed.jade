doctype xml
rss(version='2.0',
    xmlns:content='http://purl.org/rss/1.0/modules/content/',
    xmlns:wfw='http://wellformedweb.org/CommentAPI/',
    xmlns:dc='http://purl.org/dc/elements/1.1/'
    xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    - var entries = _.chain(contents.journal.entry._.pages).sortBy(function(item) {
    -   return -item.date
    - }).value()
    title= locals.name
    atom:link(href=locals.url + '/feed', rel='self', type='application/rss+xml')
    link= locals.url
    description= locals.description
    pubDate= entries[0].rfc822date
    generator The mighty Wintersmith
    language en
    for entry in entries
      - var permalink = locals.url + entry.url
      item
        title= entry.title
        link= permalink
        pubDate= entry.rfc822date
        guid(isPermaLink='true')= permalink
        author= entry.author
        description= entry.getHtml(locals.url) // passing locals.url resolves all relative urls to absolute
