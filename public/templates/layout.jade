!!! 5
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title
      block title
        = locals.title
    block description
      meta(name='description', content=locals.description)
    meta(name='viewport', content='width=device-width')

    link(rel='shortcut icon', sizes='16x16 32x32 64x64 128x128',
         href='/assets/favicon.ico')

    link(rel='apple-touch-icon-precomposed', sizes='144x144',
         href='/assets/apple-touch-icon-144x144-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='114x114',
         href='/assets/apple-touch-icon-114x114-precomposed.png')
    link(rel='apple-touch-icon-precomposed', sizes='72x72',
         href='/assets/apple-touch-icon-72x72-precomposed.png')
    link(rel='apple-touch-icon-precomposed',
         href='/assets/apple-touch-icon-precomposed.png')
    link(rel='apple-touch-icon', href='/assets/apple-touch-icon.png')

    link(rel='alternate', href=locals.url+'/feed',
         type='application/rss+xml', title=locals.description)
    link(rel='stylesheet', href='/assets/style/site.css')
  body
    div.container
      div.row
        div.span8.offset2
          include ../includes/ie.jade

          block content

          footer
            include ../includes/footer
