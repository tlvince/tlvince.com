doctype html
block vars
  - bodyclass = null;
html(lang='en-GB')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title
      block title
        = locals.title
    block description
      meta(name='description', content=locals.description)
    meta(name='viewport', content='width=device-width')

    link(rel='alternate', href=locals.url+'/feed', type='application/rss+xml', title=locals.description)
    link(rel='stylesheet', href='/assets/styles/main.css')
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
    div#content
      div.content-wrap
        block content
    footer
      div.content-wrap
        block footer
          include ../includes/footer
